<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
<div class="page-wrap">
    <div class="top-wrap">
        <a href="/admin/">返回首页</a>
        <a href="/admin/banners">banner管理</a>
        <a href="/admin/blog">blog管理</a>
        <a href="/admin/contact">评价管理</a>
        <a href="/admin/custom">用户管理</a>
        <a href="/admin/intro">简介管理</a>
        <a href="/admin/news">新闻管理</a>
    </div>
    <div class="content">
        <div>
            <form action="?" method="post">
                标题:<input style="width: 200px;margin-bottom: 5px;" type="text" name="title"/></br>
                描述:<textarea style="width: 200px;margin-bottom: 5px;" name="description"></textarea></br>
                链接:<input style="width: 200px;margin-bottom: 5px;" type="text" name="href"/></br>
                <input type="submit" value="提交"/>
            </form>
            <!--展示数据-->
            <table border="1px solid " width="100%" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>标题</th>
                        <th>描述</th>
                        <th>链接</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i<banners.length;i++){ %>
                    <tr>
                        <td><%= banners[i].ID %></td>
                        <td><%= banners[i].title %></td>
                        <td><%= banners[i].description %></td>
                        <td><%= banners[i].href %></td>
                        <td>
                            <a href="?act=mod&id=<%=banners[i].ID%>">修改</a>
                            <a href="?act=del&id=<%=banners[i].ID%>" onclick="return confirm('确认删除吗?')">删除</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <!--修改用-->
            <% if(typeof mod_data != 'undefined'){ %>
            <div>
                <form action="?" method="post">
                    <input type="hidden" name="mod_id" value="<%=mod_data.id%>"/>
                    标题:<input style="width: 200px;margin-bottom: 5px;" type="text" name="title" value="<%=mod_data.title%>"/></br>
                    描述:<textarea style="width: 200px;margin-bottom: 5px;" name="description"><%=mod_data.description%></textarea></br>
                    链接:<input style="width: 200px;margin-bottom: 5px;" type="text" name="href" value="<%=mod_data.href%>"/></br>
                    <input type="submit" value="修改"/>
                    <a href="/admin/banners">取消</a>
                </form>
            </div>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>